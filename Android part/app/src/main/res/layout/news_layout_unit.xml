<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/common_back"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="12dp"
    >
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="4dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Title"
                        android:id="@+id/textView_news_list_title"
                        android:backgroundTint="@color/cardview_light_background"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"

                        />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Published Date"
                android:paddingTop="2dp"
                android:textSize="12dp"
                android:id="@+id/textView_news_list_date"
                android:layout_below="@id/textView_news_list_title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12dp"
                android:text="Body"
                android:paddingTop="2dp"
                android:id="@+id/textView_news_list_body"
                android:layout_below="@+id/textView_news_list_date"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
